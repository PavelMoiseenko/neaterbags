<div class="grid">
  
  <div class="grid__item post-large--two-thirds push--post-large--one-sixth">

    <!--<div class="section-header">
      <h1 class="section-header--title">{{ page.title }}</h1>
      <h2 class="section-header--title">{{ page.title }}</h2>
    </div>

    <div class="rte">
      {{ page.content }}
    </div>-->
    
    <div id="subLeftCol">
      <h2 class="section-header--title">{{ page.title }}</h2>
      <p class="subpage-text-nav">← <a href="/" title="Back to Home">Back to Home</a> | <a href="#order" title="Order Now!">Order Now!</a> ↓</p>
      {{ page.content }}      
      <ul>
        {% for link in linklists.site-map.links %}
          <li>
             {% assign url_custom = link.url %}
            
             {% case link.title %}
                <a href="#">{{ link.title }}</a>
             {% when 'Shipping' %}
                <a href="#" class='info_popup_1' onclick="$('#exampleModal4').arcticmodal();return false;">{{ link.title }}</a>
                 <div class="g-hidden">
                    <div class="box-modal" id="exampleModal4">
                         <div class="box-modal_close arcticmodal-close">close</div>
                            {{ pages.shipping.content }}
                    </div>
                 </div>
             {% when 'Returns' %}
                <a href="#" class='info_popup_2' onclick="$('#exampleModal5').arcticmodal();return false;">{{ link.title }}</a>
                 <div class="g-hidden">
                    <div class="box-modal" id="exampleModal5">
                         <div class="box-modal_close arcticmodal-close">close</div>
                            {{ pages.returns.content }}
                    </div>
                 </div>
             {% when 'Security' %}
                <a href="#" class='info_popup_3' onclick="$('#exampleModal6').arcticmodal();return false;">{{ link.title }}</a>
                 <div class="g-hidden">
                    <div class="box-modal" id="exampleModal6">
                         <div class="box-modal_close arcticmodal-close">close</div>
                            {{ pages.security.content }}
                    </div>
                 </div>
             {% else %} 
                <a href="{{ url_custom }}">{{ link.title }}</a>
             {% endcase %}
          </li>
        {% endfor %}
      </ul>
    </div>
    <div id="subRightCol">
      <div class="dtm-sn-header" data-sn-id="12922" style="width: 100%; height: 1px; display: none;"></div> 
      <a href="#order" alt="Fill Out The Form Below To Order Your Neater Bag™ Dispenser Now! This Offer Is Not Available In Stores!">{{ 'neater-bag-sub-offer.jpg' | file_url | img_tag }}</a>
    </div>
    <div class="clearer"></div>
    
  </div>
</div>
